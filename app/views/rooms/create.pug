// Modal
#createRoomModal.modal.fade.bs-example-modal-md(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
    form.form-horizontal(action="/room", method="post", role="form")
        .modal-dialog.modal-md(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                    h4#myModalLabel.modal-title Create room
                .modal-body
                    .form-group
                        label.col-sm-4.control-label(for='roomName') Room Name
                        .col-sm-8
                            input#roomName.form-control(type='text', name="roomName", placeholder='')
                    .form-group
                        label.col-sm-4.control-label by
                        .col-sm-8
                            p.form-control-static
                                | #{currentUser.username}

                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Create room
